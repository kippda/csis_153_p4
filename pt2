def createMenu(tmpList):
    """
    Takes tmpList and returns a numbered string
    with line breaks between each option
    """
    ct = 1
    tmpStr = ""
    for option in tmpList:
        tmpStr += str(ct) + ". " + option + " " + "\n"
        ct += 1
    return(tmpStr)

def validChoice(lst):
    """
    Returns a choice that is a digit between 1 and
    the length of the lst
    """
    ch = input("Please enter your choice: ")
    while ch.isdigit() is False or int(ch) < 1 or int(ch) > len(lst):
        ch = input("Please enter a valid choice: ")
    return(int(ch))

def checkingMenu():
    print(checkingStr)
    cChoice = validChoice(checkingList)
    while cChoice != 3:
        if cChoice == 1:
            print("Deposit not implemented yet")
            print()
            print(checkingStr)
            cChoice = validChoice(checkingList)
        else:
            print("Withdraw not implemented yet")
            print()
            print(checkingStr)
            cChoice = validChoice(checkingList)        
    return()

def savingsMenu():
    print(savingsStr)
    sChoice = validChoice(savingsList)
    while sChoice != 4:
        if sChoice == 1:
            print("Print Balance not implemented yet")
            print()
            print(savingsStr)
            sChoice = validChoice(savingsList)
        elif sChoice == 2:
            print("Calculate Interest not implemented yet")
            print()
            print(savingsStr)
            sChoice = validChoice(savingsList)
        else:
            print("Close Savings Account not implemented yet")
            print()
            print(savingsStr)
            sChoice = validChoice(savingsList)        
    return()


mainList = ["Checkings", "Savings", "Exit"]
checkingList = ["Deposit", "Withdraw", "Return to Main Menu"]
savingsList = ["Print Balance", "Calculate Interest", "Close Savings Account", "Return to Main Menu"]

mainStr = createMenu(mainList)
checkingStr = createMenu(checkingList)
savingsStr = createMenu(savingsList)

print(mainStr)
mChoice = validChoice(mainList)
print()

while mChoice != 3:
    if mChoice == 1:
        checkingMenu()
        print()
        print(mainStr)
        mChoice = validChoice(mainList)
        print()
    else:
        savingsMenu()
        print()
        print(mainStr)
        mChoice = validChoice(mainList)
        print()

print("Program ended")

